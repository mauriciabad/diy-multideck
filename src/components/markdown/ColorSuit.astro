---
import { getColorBySuitId, type SuitColorId, type SuitColor } from './suits'

export interface Props {
  id?: SuitColorId
  color?: SuitColor
  noAlt?: boolean
}

const { id, color, noAlt = false } = Astro.props

const suitColor = id !== undefined ? getColorBySuitId(id) : color
---

<img
  src={`/images/colors/${suitColor}.svg`}
  class="not-prose unset align-[-0.25em] inline-block pointer-events-none h-[1.25em]"
  alt={noAlt ? '' : ` ${suitColor} `}
  draggable="false"
/>
