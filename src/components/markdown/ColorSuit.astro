---
import { getColorBySuitId, type SuitColorId, type SuitColor } from './suits'

export interface Props {
  color?: SuitColor
  noAlt?: boolean
}

const { color, noAlt = false } = Astro.props
---

<img
  src={`/images/colors/${color}.svg`}
  class="not-prose unset align-[-0.25em] inline-block pointer-events-none h-[1.25em]"
  alt={noAlt ? '' : ` ${color} `}
  draggable="false"
/>
