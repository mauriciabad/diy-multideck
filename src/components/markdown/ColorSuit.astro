---
import { getSuitIdByColor, getColorBySuitId } from './suits'

export interface Props {
  id?: SuitColorId
  color?: SuitColor
  noAlt?: boolean
}

const { id, color, noAlt = false } = Astro.props

const suitColorId = id ?? (color ? getSuitIdByColor(color) : undefined)
const suitColor = getColorBySuitId(suitColorId)
---

<img
  src={`/images/colors/${suitColor}.svg`}
  class="not-prose unset align-[-0.25em] inline-block pointer-events-none h-[1.25em]"
  alt={noAlt ? '' : ` ${suitColor} `}
  draggable="false"
/>
