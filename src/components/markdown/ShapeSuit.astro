---
import { getShapeSuitEmojiById, type ShapeSuitId } from './suits'

export interface Props {
  id: ShapeSuitId
}

const { id } = Astro.props
const emoji = getShapeSuitEmojiById(id)
---

<>
  <svg
    viewBox="0 0 125 125"
    fill="none"
    class="not-prose align-[-0.15em] inline-block h-[1em]"
  >
    {
      id === 'circle' && (
        <circle cx="62.5" cy="62.5" r="52.5" fill="currentColor" />
      )
    }
    {
      id === 'heart' && (
        <path
          d="M89.9144 13C69.9617 13 62.6308 33.3379 62.6308 33.3379C62.6308 33.3379 55.4002 13 35.3109 13C20.2121 13 3.00049 24.9357 9.35693 52.068C15.7134 79.2004 62.6855 113 62.6855 113C62.6855 113 109.485 79.2004 115.85 52.068C122.207 24.9357 106.233 13 89.9144 13Z"
          fill="currentColor"
        />
      )
    }
    {
      id === 'square' && (
        <rect
          x="13"
          y="13"
          width="100"
          height="100"
          rx="10"
          fill="currentColor"
        />
      )
    }
  </svg>
  <span class="sr-only [font-variant-emoji:emoji]">{emoji}</span>
</>
