---
import { cn } from '../../lib/cn'

const suitsInfo = {
  '3d': {
    file: 'example-3d-suit',
    alt: 'Example 3D suit',
  },
} as const satisfies Record<string, { file: string; alt: string }>
type ExampleSuit = keyof typeof suitsInfo

export interface Props {
  suit: ExampleSuit
}

const { suit } = Astro.props
const suitInfo = suitsInfo[suit]
---

<img
  src={`/images/example-suits/${suitInfo.file}.svg`}
  class={cn(
    'not-prose unset align-[-0.25em] xs:align-[-0.5em] inline-block pointer-events-none',
    'h-[1.5em] xs:h-[2em]'
  )}
  alt={suitInfo.alt}
  draggable="false"
/>
