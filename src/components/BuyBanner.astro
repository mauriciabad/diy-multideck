---
import LinkCard from './LinkCard.astro'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<LinkCard
  href="/buy"
  title="Buy the DIY Multideck"
  description="Get your copy of the DIY Multideck and start playing your favorite games with your friends and family."
  cta="Buy now"
  icon="shopping-cart"
  class={className}
/>
